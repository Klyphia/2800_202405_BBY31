<%- include('templates/header.ejs') %>
    <div class="container d-flex h-100 justify-content-center align-items-center">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <h1 class="text-center">Login</h1>
                <form action="/loggingIn" method="post" class="p-3 border rounded shadow">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="Login" class="btn btn-primary">
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="/passwordReset">Forgot your password?</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-8 col-sm-10 text-center mt-3">
                <form action="/signup" method="get">
                    <input type="submit" value="Sign Up" class="btn btn-secondary">
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<%- include('templates/footer.ejs') %>


