<%- include('templates/header.ejs') %>
<head>
    <link rel="stylesheet" href="/style/viewpost.css">
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .mt-custom {
            margin-top: -200px !important; /* Adjusted to move up by 200 pixels */
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="container mt-custom">
        <div class="row">
            <!-- Post Details -->
            <div class="col-md-12 mb-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/post/comment" method="POST">
                            <h1 class="card-title"><%= postTitle %></h1>
                            <p class="card-text"><%= postTag %></p>
                            <% if (postUploadImage) { %>
                                <img src="<%= postUploadImage %>" alt="No image" class="img-fluid mb-3">
                            <% } %>
                            <% if (postLink) { %>
                                <a href="<%= postLink %>" class="btn btn-link mb-3">Read more</a>
                            <% } %>
                            <input type="text" name="postID" value="<%= postID %>" readonly>
                            <p class="card-text"><%= postContent %></p>
                            <div>
                                <h5>Leave a comment:</h5>
                                <!-- Comment Submission Form -->
                                <div class="form-group">
                                    <label for="commenter">Name: <%= commenterUsername %></label>
                                </div>
                                <div class="form-group">
                                    <label for="comment">Comment:</label>
                                    <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Comments Section -->
        <% if (commentVisibility === 'true') { %>
            <h4>Comments:</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Comments</h2>
                            <% comments.forEach(comment => { %>
                                <div class="comment mb-3">
                                    <p><strong><%= comment.commenterUsername %>:</strong> <%= comment.comment %></p>
                                    <p><em><%= new Date(comment.createdAt).toLocaleString() %></em></p>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
<%- include('templates/footer.ejs') %>
