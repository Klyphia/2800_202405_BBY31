<%- include('templates/header.ejs') %>
<head>
    <style>
        /* Custom CSS */
        .mt-200 {
            margin-top: 200px;
        }
    </style>
</head>
<body>
    <section class="grid-container pb-5 mt-200"> <!-- Add pb-5 class for padding at the bottom and mt-200 for margin at the top -->
        <div class="row">
            <input type="hidden" name="username" value="<%= username %>">
            <input type="hidden" name="message" value="<%= message %>">
            <% savedDrafts.forEach(function(post) { %>
                <div class="col-md-4 mb-4">
                    <a href="/createPost?postObjectID=<%= encodeURIComponent(post.postId) %>&username=<%= encodeURIComponent(username) %>&message=<%= encodeURIComponent(message) %>" class="card-link">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title"><%= post.postTitle %></h5>
                                <p class="card-text"><%= post.postTag %></p>
                                <input type="hidden" name="postId" value="<%= post.postId %>">
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </section>
    
    <script>
        
    </script>
</body>

