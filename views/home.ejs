<%- include('templates/header.ejs') %>
<body>
    <!-- A button to open the popup form -->
    <button class="open-button" onclick="openForm()">Open Form</button>

    <!-- The form -->
    <div class="form-popup" id="myForm" style="display:none;"> <!-- Ensure the form is hidden by default -->
        <form class="form-container">
            <h1>How are you feeling today?</h1>

            <div class="slidecontainer">
                <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                <p>Value: <span id="demo"></span></p> <!-- Display the slider value -->
            </div>

            <button type="submit" class="btn">Submit</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>

    <!-- Centering the section with class "daily-quote" -->
    <!-- style height is for changing the size of the webpage -->    
    <div class="container d-flex justify-content-center align-items-center" style="height: 15vh;">
        
    </div>

    <section class="grid-container pb-5" style="position: relative;"> <!-- Add pb-5 class for padding at the bottom -->
        <p id="quote" style="text-align: center;"></p>
        <p id="author" style="padding: auto; text-align: center;"></p>
        <h2 class="text-center">Recent Posts</h2>
        <!-- Filter Dropdown -->
        <div class="text-center mb-4">
            <label for="postTagFilter" class="mr-2">Filter by Tag:</label>
            <select id="postTagFilter">
                <option value="all">All</option>
                        <!-- Loop through uniqueTags and create an option for each tag -->
                <% 
                    // Extract unique postTags
                    const uniqueTags = [...new Set(storyPosts.map(post => post.postTag))];
                    uniqueTags.forEach(function(tag) { 
                %>
                    <option value="<%= tag %>"><%= tag %></option>
                <% }); %>
            </select>
        </div>

        <!-- I LOVE DOING INLINE HAHAHAHAAH-->
        <div class="row" id="postsContainer" style="margin-left: 3px; margin-right: 3px;">
            <% storyPosts.forEach(function(post) { %>
                <div class="col-md-4 mb-4 post-card" data-post-tag="<%= post.postTag %>">
                    <input type="hidden" name="username" value="<%= username %>">
                    <input type="hidden" name="message" value="<%= message %>">
                    <a href="/viewposts?title=<%= encodeURIComponent(post.postTitle) %>&tag=<%= encodeURIComponent(post.postTag) %>&image=<%= encodeURIComponent(post.postUploadImage) %>&link=<%= encodeURIComponent(post.postLink) %>&content=<%= encodeURIComponent(post.postContent) %>&visibility=<%= encodeURIComponent(post.commentVisibility) %>&postObjectID=<%= encodeURIComponent(post.postId) %>&username=<%= encodeURIComponent(username) %>&message=<%= encodeURIComponent(message) %>" class="card-link"> <!-- Add anchor tag wrapping the card -->
                        <div class="card shadow">
                            <!-- I LOVE DOING INLINE HAHAHAHAAH-->
                            <div class="card-body" style="background-color: #40c9a2; color: #664147; padding-left: 10px; border-radius: 5px;box-shadow: 2px 2px 2px 2px rgba(0, 0, 0.5, 0.5); overflow-x: hidden; border: 10px; ">
                                <h5 class="card-title"><%= post.postTitle %></h5>
                                <p class="card-text"><%= post.postTag %></p>
                                <input type="hidden" name="username" value="<%= username %>">
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </section>
    
    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }

        var slider = document.getElementById("myRange");
        var output = document.getElementById("demo");
        output.innerHTML = slider.value; // Display the default slider value

        // Update the current slider value (each time you drag the slider handle)
        slider.oninput = function () {
            output.innerHTML = this.value;
        }

        // Tag filter
        document.getElementById('postTagFilter').addEventListener('change', function() {
            // Get the selected tag
            const selectedTag = this.value;
            // Get all posts
            const posts = document.querySelectorAll('.post-card');

            // Show or hide posts based on the selected tag
            posts.forEach(post => {
                // Get the post tag
                const postTag = post.getAttribute('data-post-tag');
                // Show the post if it's the selected tag or if the selected tag is 'all'
                if (selectedTag === 'all' || postTag === selectedTag) {
                    // Show the post
                    post.style.display = 'block';
                } else {
                    // Hide the post
                    post.style.display = 'none';
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
