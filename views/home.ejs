<%- include('templates/header.ejs') %>

    <head>
        <link rel="stylesheet" href="/style/home.css">
    </head>

    <body>
        <!-- A button to open the popup form -->
        <button class="open-button" onclick="openForm()">Open Form</button>

        <!-- The form -->
        <div class="form-popup" id="myForm">
            <form class="form-container">
                <div class="moodTitle">How are you feeling today?</div>

                <button type="button" class="redButton" id="moodButton" onclick="closeForm()">1</button>
                <button type="button" class="orangeButton" id="moodButton" onclick="closeForm()">2</button>
                <button type="button" class="yellowButton" id="moodButton" onclick="closeForm()">3</button>
                <button type="button" class="lightGreenButton" id="moodButton" onclick="closeForm()">4</button>
                <button type="button" class="greenButton" id="moodButton" onclick="closeForm()">5</button>
                <button type="button" class="btn cancel" onclick="closeForm()">I'll say later</button>
                <button type="button" class="btn cancel" onclick="openDetails()">Color details</button>
            </form>
        </div>
        <div id="details" class="colorDetails">
            <p>1 = Terrible day.</p>
            <p>2 = Bad day.</p>
            <p>3 = Neutral day.</p>
            <p>4 = Good day.</p>
            <p>5 = Amazing day.</p>
    <!-- Centering the section with class "daily-quote" -->
    <!-- style height is for changing the size of the webpage -->    
    <div class="container d-flex justify-content-center align-items-center" style="height: 15vh;">
        
    </div>

    <section class="grid-container pb-5" style="position: relative;"> <!-- Add pb-5 class for padding at the bottom -->
        <p id="quote" style="text-align: center;"></p>
        <p id="author" style="padding: auto; text-align: center;"></p>
        <h2 class="text-center">Recent Posts</h2>
        <!-- Filter Dropdown -->
        <div class="text-center mb-4">
            <label for="postTagFilter" class="mr-2">Filter by Tag:</label>
            <select id="postTagFilter">
                <option value="all">All</option>
                <% 
                    // Extract unique postTags
                    const uniqueTags = [...new Set(storyPosts.map(post => post.postTag))];
                    uniqueTags.forEach(function(tag) { 
                %>
                    <option value="<%= tag %>"><%= tag %></option>
                <% }); %>
            </select>
        </div>

        <div class="row" id="postsContainer">
            <% storyPosts.forEach(function(post) { %>
                <div class="col-md-4 mb-4 post-card" data-post-tag="<%= post.postTag %>">
                    <a href="/viewposts?title=<%= encodeURIComponent(post.postTitle) %>&tag=<%= encodeURIComponent(post.postTag) %>&image=<%= encodeURIComponent(post.postUploadImage) %>&link=<%= encodeURIComponent(post.postLink) %>&content=<%= encodeURIComponent(post.postContent) %>&comments=<%= encodeURIComponent(JSON.stringify(post.comments)) %>&visibility=<%= encodeURIComponent(post.commentVisibility) %>" class="card-link"> <!-- Add anchor tag wrapping the card -->
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title"><%= post.postTitle %></h5>
                                <p class="card-text"><%= post.postTag %></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>

        <!-- Centering the section with class "daily-quote" -->
        <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
            <section class="daily-quote">
                <h2>Daily Quote</h2>
                <p id="quote"></p>
                <script>
                    const quotes = [
                        "Quote 1",
                        "Quote 2",
                        "Quote 3",
                        "Quote 4",
                        "Quote 5"
                    ];
                    const randomIndex = Math.floor(Math.random() * quotes.length);
                    document.getElementById("quote").textContent = quotes[randomIndex];
                </script>
            </section>
        </div>

        <section class="grid-container pb-5"> <!-- Add pb-5 class for padding at the bottom -->
            <h2 class="text-center">Recent Posts</h2>
            <div class="row">
                <% storyPosts.forEach(function(post) { %>
                    <div class="col-md-4 mb-4">
                        <a href="/viewposts?title=<%= encodeURIComponent(post.postTitle) %>&tag=<%= encodeURIComponent(post.postTag) %>&image=<%= encodeURIComponent(post.postUploadImage) %>&link=<%= encodeURIComponent(post.postLink) %>&content=<%= encodeURIComponent(post.postContent) %>&comments=<%= encodeURIComponent(JSON.stringify(post.comments)) %>&visibility=<%= encodeURIComponent(post.commentVisibility) %>"
                            class="card-link"> <!-- Add anchor tag wrapping the card -->
                            <div class="card shadow">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= post.postTitle %>
                                    </h5>
                                    <p class="card-text">
                                        <%= post.postTag %>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
            </div>
        </section>

        <script>
            function openForm() {
                document.getElementById("myForm").style.display = "block";
            }

            function openDetails() {
                document.getElementById("details").style.display = "block";
            }

            function closeForm() {
                document.getElementById("myForm").style.display = "none";
                document.getElementById("details").style.display = "none";
            }
            var slider = document.getElementById("myRange");
            var output = document.getElementById("demo");
            output.innerHTML = slider.value; // Display the default slider value

            // Update the current slider value (each time you drag the slider handle)
            slider.oninput = function () {
                output.innerHTML = this.value;
            }
        </script>
    </body>

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }

        var slider = document.getElementById("myRange");
        var output = document.getElementById("demo");
        output.innerHTML = slider.value; // Display the default slider value

        // Update the current slider value (each time you drag the slider handle)
        slider.oninput = function () {
            output.innerHTML = this.value;
        }

        // Tag filter
        document.getElementById('postTagFilter').addEventListener('change', function() {
            const selectedTag = this.value;
            const posts = document.querySelectorAll('.post-card');

            posts.forEach(post => {
                const postTag = post.getAttribute('data-post-tag');
                if (selectedTag === 'all' || postTag === selectedTag) {
                    post.style.display = 'block';
                } else {
                    post.style.display = 'none';
                }
            });
        });
    </script>
