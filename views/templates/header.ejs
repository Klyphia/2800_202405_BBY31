<body>
    <header class="navbar navbar-expand-lg navbar-light fixed-top header-navbar" style="background-color: #40c9a2;    border-bottom: 1px solid #000000;
    text-align: center; ">
        <div class="container-fluid justify-content-center">
            <a class="navbar-brand">
                <img id="compassionetLogo" src="/images/CompassionetLogo.png" alt="Compassionet" />
            </a>
        </div>
    </header>

    <script>
        window.onload = function() {
            var timer;
            var el = document.getElementById('compassionetLogo');

            var firing = false;
            var singleClick = function () {
                location.href = "/";
            };

            var doubleClick = function () {
                window.location.href = "/easterEgg";
            };

            var firingFunc = singleClick;

            el.onclick = function () {
                // Detect the 2nd single click event, so we can stop it
                if (firing)
                    return;

                firing = true;
                timer = setTimeout(function () {
                    firingFunc();

                    // Always revert back to singleClick firing function
                    firingFunc = singleClick;
                    firing = false;
                }, 250);

            }

            el.ondblclick = function () {
                firingFunc = doubleClick;
                // Now, when the original timeout of your single click finishes, 
                // firingFunc will be pointing to your doubleClick handler        
            }
        }

    </script>